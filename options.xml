<?xml version="1.0"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/options.xsd">
	<import>
		<categories>
			<category name="general.http.xmpp">
				<parent>general.http</parent>
				<showorder>1</showorder>
			</category>
		</categories>
		
		<options>
			<option name="module_xmpp">
				<categoryname>module.content</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>

			<option name="xmpp_domain">
				<categoryname>general.http.xmpp</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue><!-- e.g. talk.easy-coding.de -->
				<showorder>1</showorder>
			</option>
			<option name="xmpp_auth_cookie">
				<categoryname>general.http.xmpp</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>2</showorder>
			</option>
			
			<option name="xmpp_chat_http">
				<categoryname>general.http.xmpp</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue>http-bind/</defaultvalue>
				<showorder>3</showorder>
			</option>
			<option name="xmpp_chat_autojoin">
				<categoryname>general.http.xmpp</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue></defaultvalue><!-- line separated e.g. www@conference.talk.easy-coding.de -->
				<showorder>4</showorder>
			</option>
			<option name="xmpp_chat_anonymous">
				<categoryname>general.http.xmpp</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<showorder>5</showorder>
			</option>
		</options>
	</import>
</data>
